<launch>

  <group ns="usb_cam">

    <!-- USB camera driver + controller manager -->
    <node name="hardware" pkg="usb_cam_hardware" type="usb_cam_hardware_node" output="screen">
      <remap from="camera_info_controller/camera_info" to="camera_info"/>
      <remap from="mjpeg_controller/image" to="image"/>
      <remap from="packet_controller/packet" to="packet/compressed"/>
      <param name="video_device" value="/dev/video1"/>
      <param name="image_width" value="1472"/>
      <param name="image_height" value="736"/>
      <param name="pixel_format" value="mjpeg"/>
      <param name="framerate" value="30"/>
    </node>

    <!-- Controller starter that ask the manager to start -->
    <node name="controller_starter" pkg="controller_manager" type="controller_manager" 
          args="spawn camera_info_controller mjpeg_controller packet_controller" output="screen"/>

    <!-- Parameters for controllers -->
    <param name="camera_info_controller/type" value="usb_cam_controllers/CameraInfoController"/>
    <param name="camera_info_controller/camera_frame_id" value="insta360"/>

    <param name="mjpeg_controller/type" value="usb_cam_controllers/MjpegController"/>

    <param name="packet_controller/type" value="usb_cam_controllers/PacketController"/>
    <param name="packet_controller/format" value="jpeg"/>

  </group>

</launch>